<ul class="list-unstyled">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Status</th>
          <th>Task</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% tasks.each do |task| %>
          <tr>
            <td><%= task.status %></td>
            <td><%= task.content %></td>
            <td><% if current_user == task.user %>
                <%= link_to 'Detail', task, class: 'btn btn-secondary btn-sm' %>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <%= paginate tasks %>
</ul>